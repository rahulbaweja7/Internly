# Production Environment Variables
# Copy this to .env and fill in your actual values

# MongoDB Connection String (Production)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=production
BACKEND_URL=https://api.your-domain.com

# Google OAuth 2.0 Credentials (Production)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_AUTH_CALLBACK_URL=https://api.your-domain.com/api/auth/google/callback
# Gmail OAuth redirect used by googleapis client
REDIRECT_URI=https://api.your-domain.com/api/gmail/oauth2callback

# Security (Generate strong secrets for production)
SESSION_SECRET=your-super-secret-session-key-min-32-characters-long
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# Email Configuration (Production)
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-specific-password
FRONTEND_URL=https://your-domain.com

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Database Connection Pool
DB_POOL_SIZE=10
DB_TIMEOUT_MS=30000

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true
