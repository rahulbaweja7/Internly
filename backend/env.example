# MongoDB Connection String
# Replace with your actual MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development
BACKEND_URL=http://localhost:3001

# Google OAuth 2.0 Credentials (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_AUTH_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
# Gmail OAuth redirect used by googleapis client
REDIRECT_URI=http://localhost:3001/api/gmail/oauth2callback

# Session Secret (change this in production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for password reset and email verification)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
FRONTEND_URL=http://localhost:3000 